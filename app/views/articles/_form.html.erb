<div class="row justify-content-center">
  <div class="col-10">
    <%= render "shared/errors" %>
    <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
        </div>
      </div>


      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-dark btn-lg" %>
      </div>

    <% end %>
  </div>
  <div class="mb-5">
    <%= link_to "[ Cancel and return to articles listing ]", articles_path %>
  </div>

</div>
